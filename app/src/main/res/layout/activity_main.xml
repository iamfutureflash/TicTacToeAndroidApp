            android:onClick="onClickCheck" />

        <Button
            android:id="@+id/btn5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onClickCheck" />

        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onClickCheck" />

        <Button
            android:id="@+id/btn7"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onClickCheck" />

        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onClickCheck" />

        <Button
            android:id="@+id/btn9"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="onClickCheck" />

    </GridLayout>

</LinearLayout>